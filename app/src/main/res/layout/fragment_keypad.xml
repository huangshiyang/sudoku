<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_background"
    android:orientation="vertical"
    android:id="@+id/keypad">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/menu_space"
        android:paddingLeft="@dimen/menu_button_padding"
        android:text="@string/keypad"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_size" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/keypad_1"
                android:layout_margin="@dimen/menu_button_margin"
                android:background="@drawable/button"
                android:padding="@dimen/menu_button_padding"
                android:text="1"></Button>

            <Button
                android:id="@+id/keypad_2"
                android:layout_margin="@dimen/menu_button_margin"
                android:background="@drawable/button"
                android:padding="@dimen/menu_button_padding"
                android:text="2"></Button>

            <Button
                android:id="@+id/keypad_3"
                android:layout_margin="@dimen/menu_button_margin"
                android:background="@drawable/button"
                android:padding="@dimen/menu_button_padding"
                android:text="3"></Button>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/keypad_4"
                android:layout_margin="@dimen/menu_button_margin"
                android:background="@drawable/button"
                android:padding="@dimen/menu_button_padding"
                android:text="4"></Button>

            <Button
                android:id="@+id/keypad_5"
                android:layout_margin="@dimen/menu_button_margin"
                android:background="@drawable/button"
                android:padding="@dimen/menu_button_padding"
                android:text="5"></Button>

            <Button
                android:id="@+id/keypad_6"
                android:layout_margin="@dimen/menu_button_margin"
                android:background="@drawable/button"
                android:padding="@dimen/menu_button_padding"
                android:text="6"></Button>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/keypad_7"
                android:layout_margin="@dimen/menu_button_margin"
                android:background="@drawable/button"
                android:padding="@dimen/menu_button_padding"
                android:text="7"></Button>

            <Button
                android:id="@+id/keypad_8"
                android:layout_margin="@dimen/menu_button_margin"
                android:background="@drawable/button"
                android:padding="@dimen/menu_button_padding"
                android:text="8"></Button>

            <Button
                android:id="@+id/keypad_9"
                android:layout_margin="@dimen/menu_button_margin"
                android:background="@drawable/button"
                android:padding="@dimen/menu_button_padding"
                android:text="9"></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>